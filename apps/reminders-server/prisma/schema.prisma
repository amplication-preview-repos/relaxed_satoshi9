datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reminder {
  amount      Float?
  createdAt   DateTime   @default(now())
  details     String?
  frequency   Frequency? @relation(fields: [frequencyId], references: [id])
  frequencyId String?
  id          String     @id @default(cuid())
  isDone      Boolean?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model Frequency {
  createdAt DateTime   @default(now())
  days      Int?
  id        String     @id @default(cuid())
  label     String?
  reminders Reminder[]
  updatedAt DateTime   @updatedAt
}

model User {
  createdAt DateTime   @default(now())
  email     String?    @unique
  firstName String?
  id        String     @id @default(cuid())
  lastName  String?
  password  String
  reminders Reminder[]
  roles     Json
  updatedAt DateTime   @updatedAt
  username  String     @unique
}
